<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="checkValidity" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="campground[title]" value="<%= campground.title %>"
                    class="form-control" required>
                <div class="valid-feedback">
                    Good look!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="campground[location]" value="<%= campground.location %>"
                    class="form-control" required>
                <div class="valid-feedback">
                    Good look!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.0" value="<%= campground.price %>" required>
                    <div class="valid-feedback">
                        Good look!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" id="description" name="campground[description]"
                    value="<%= campground.description %>" class="form-control" required>
                <div class="valid-feedback">
                    Good look!
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add images</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function(image, i) { %>
                    <img src="<%= image.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= image.filename %>">
                        <label for="image-<%= i %>">Delete?</label>
                    </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>    
        <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>
    </div>
</div>